<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('./places.css') }}"/>
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
			<link rel="stylesheet" href="{{ asset('./owl/owl.carousel.min.css') }}"/>
			<link rel="stylesheet" href="{{ asset('./owl/owl.theme.default.css') }}"/>
			<link rel="stylesheet" href="{{ asset('./magnific/magnific-popup.css') }}">
			<link rel="stylesheet" href="{{ asset('./css/style.css') }}"/>
			<link
			href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">

			<!-- reservation -->
			<link rel="stylesheet" href="{{ asset('./res/bootstrap.min.css" ') }}"/>
			<link rel="stylesheet" href="{{ asset('./style.css" ') }}"/>
		{% endblock %}

		{% block javascripts %}
			<script src="{{ asset('./js/jquery-3.3.1.min.js') }}"></script>
			<!-- magnific popup -->
			<script src="{{ asset('./magnific/magnific.js') }}"></script>
			<script src="{{ asset('./magnific/jquery.magnific-popup.min.js') }}"></script>
			<!-- owl carousel -->
			<script src="{{ asset('./owl/owl.js') }}"></script>
			<script src="{{ asset('./owl/owl.carousel.min.js') }}"></script>
			<!-- font-awesome -->
			<script src="{{ asset('./js/all.js') }}"></script>
			<!-- mine -->
			<script src="{{ asset('./js/main.js') }}"></script>
		{% endblock %}
	</head>
	{% block Header %}
		<header class="header">
			{% block courasel %}
				<div class="header-bar">
					<a href="{{path('home')}}">
						<img src="{{ asset('./img/logo.png') }}" class="logo" alt="logo"/>
					</a>

					<div class="header-btns">
						<div class="nav-btn open">
							<i class="fas fas fa-bars"></i>
						</div>
						<div class="nav-btn close hide">
							<i class="fas fas fa-window-close"></i>
						</div>
					</div>
				</div>
			{% endblock %}
			<ul class="links">
				{% if app.user %}
					<li>
						<a class="single-link" href="{{path('admin')}}">
							<strong>{{app.user.username}}</strong>

							<img src="{{ asset('./img/'~ app.user.image ) }}" style=" width: 50px;
																																  height: 50px;
																																  border-radius: 50%;
								
																																  object-fit: cover;" alt={{app.user.image }}/>

						</a>
					</li>
				{% endif %}
				<li>
					<a class="single-link" href="{{path('places_index')}}">Places</a>
				</li>
				<li>
					<a class="single-link" href="{{path('adventures_index')}}">Advetures</a>
				</li>
				<li>
					<a class="single-link" href="{{path('trip_list')}}">Trips</a>
				</li>
				<li>
					<a class="single-link" href="{{path('hotels_index')}}">Hotels</a>
				</li>
				<li>
					<a class="single-link" href="{{path('blog',{add:'false' })}}">blogs</a>
				</li>
				<li>
					<a class="single-link" href="{{path('contact')}}">contact</a>

				</li>
				{% if  app.user == null %}
					<li>
						<a class="single-link" href="{{path('app_login')}}">se connecter
							<i class="far fa-user-circle"></i>
						</a>

					</li>
				{% endif %}

			</ul>
		</header>
		{% block banner %}
			<div class="banner">
				<h3 class="banner-info">plan a trip to santorni village</h3>
				<h1 class="banner-title">taxa adventure</h1>
			</div>
		{% endblock  %}

	{% endblock %}
	{% block sidebar %}{% endblock  %}


	{% block body %}
		<body></body>
	{% endblock %}

</html>
