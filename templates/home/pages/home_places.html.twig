	<section class="places center">
		<div class="section-header">
			<p class="section-info">we're offering these popular services</p>
			<h1 class="section-title">popular places around the world</h1>
			<div class="section-line"></div>
		</div>
	
	
		<div class="py-5">
  
     
    <div class="row">
        {% for place in places|slice(0, 4) %}
	
			<div id="pass" class="col-lg-12 mb-3 mb-lg-0" style="margin-top: 10px; margin-left: 0px;">
				<div class="hover hover-1 text-white rounded"><img src="{{ asset('./img/' ~ place.image) }}" alt="">
					<div class="hover-overlay"></div>
					<div class="hover-1-content px-5 py-4">
						<h3 class="hover-1-title text-uppercase font-weight-bold mb-0">
							<span class="font-weight-light">{{place.titre}}
							</span></h3>
							
						<p class="hover-1-description font-weight-light mb-0">{{place.description}}</p>
						<a href="{{path('place_go',{id: place.id})}}" style="background-color:white;" >
							<button type="button" class="btn btn-light">GO</button>
							</a>
					</div>
				</div>
			</div>
   
{% endfor %}

</div>
			
	
	</section>