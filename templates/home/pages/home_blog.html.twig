<section class="trips center">
	<div class="section-header">
		<p class="section-info">we're offering these popular services</p>
		<h1 class="section-title">latest posts from blogs</h1>
		<div class="section-line"></div>
	</div>
	<div class="flexbox-parent">
		{% for blog in blogs |slice(0, 3) %}

			<article class="flexbox-child single-trip">
				<div class="img-container">
					<img src="{{ asset('./img/' ~ blog.image) }}" class="trips-img" alt=""/>
				</div>
				<br/>
				<p class="title">{{ blog.user|split('+')[0]}}
					<img src={{ asset('./img/' ~ blog.user|split('+')[1]) }} alt="user__image" style=" width: 50px;
																														  height: 50px;
																														  border-radius: 50%;
						
																														  object-fit: cover;"></p>
				<p class="subtitle">
					{{blog.description}}
				</p>
			</article>
		{% endfor %}
	</div>
</section>
