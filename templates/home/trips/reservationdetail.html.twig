{% block stylesheets %}

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link
	href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">

	<!-- reservation -->
	<link rel="stylesheet" href="{{ asset('./res/bootstrap.min.css') }}"/>
	<link rel="stylesheet" href="{{ asset('./res/style.css') }}"/>
{% endblock %}
{% if trip %}
	<div id="booking" class="section" style="background-image: url({{ asset('./img/' ~ trip.image) }});background-size: cover;
																					background-position: center;">
		<div class="section-center">
			<div class="container">
				<div class="row">
					<div class="col-md-7 col-md-push-5">
						<div class="booking-cta">
							<h1>{{trip.titre}}</h1>

							<hr>
							<p>
								<strong>{{trip.description}}
								</strong>
							</p>
							<hr>
							<p>
								<strong>Prix :{{trip.prix}}$</strong>
							</p>
							<hr>
							<p>
								<strong>destination :{{trip.destination}}
								</strong>
							</p>
							<hr>
							<p>
								<strong>Hotel :{{trip.hotel}}
								</strong>
							</p>
							<hr>
							<p>
								<strong>Date :{{trip.date.format('d/m/Y')}}
								</strong>
							</p>
							<div class="card-footer text-muted">
								<a href="{{ path('home')}}" class="btn btn-primary">Home</a>

							</div>
						</div>

					</div>

				</div>
			</div>
		</div>
	</div>
{% endif %}
