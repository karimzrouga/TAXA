{% block stylesheets %}

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link
	href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">

	<!-- reservation -->
	<link rel="stylesheet" href="{{ asset('./res/bootstrap.min.css') }}"/>
	<link rel="stylesheet" href="{{ asset('./res/style.css') }}"/>
{% endblock %}
{% if resadv %}
	<div id="booking" class="section" style="background-image: url({{ asset('./img/' ~ resadv.image) }});background-size: cover;
												background-position: center;">
		<div class="section-center">
			<div class="container">
				<div class="row">
					<div class="col-md-7 col-md-push-5">
						<div class="booking-cta">
							<h1>Make your reservation</h1>


							<p>{{resadv.description}}
							</p>
						</div>
					</div>
					<div class="col-md-4 col-md-pull-7">
						<div class="booking-form">
							<form>
								<div class="form-group">
									<span class="form-label">Your Adventure</span>
									<input class="form-control" type="text" value="{{resadv.titre}}" readonly>
								</div>
								<div class="form-group">
									<span class="form-label">Your Destination</span>
									<input class="form-control" type="text" value="{{resadv.destination}}" readonly>
								</div>
								
									<div class="row">
									<div class="col-md">
										<div class="form-group">
											<span class="form-label">Check in</span>
											<input class="form-control" value="{{resadv.date.format('d/m/Y')}}" readonly>
											<span class="select-arrow"></span>
										</div>
									</div>
									
									
								</div>
								
								<div class="row">
									<div class="col-sm-4">
										<div class="form-group">
											<span class="form-label">prix</span>
											<input class="form-control" type="text" value="{{resadv.prix}}" readonly>
											<span class="select-arrow"></span>
										</div>
									</div>

								</div>
								<div class="form-btn">

									<a href="{{path('makereservation',{id: resadv.id,type:'adv'})}}" class="submit-btn">Reservation</a>

									<a href="{{ path('home')}}" class="submit-btn">Cancel</a>
								</div>
							</form>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endif %}


{% if newres %}
	<div id="booking" class="section" style="background-image: url({{ asset('./img/' ~ newres.adventure.image) }});background-size: cover;
												background-position: center;">
		<div class="section-center">
			<div class="container">
				<div class="row">
					<div class="col-md-7 col-md-push-5">
						<div class="booking-cta">
							<h1>reservation Done</h1>


						</div>
					</div>
					<div class="col-md-4 col-md-pull-7">

						<div class="card text-center">
							<div class="card-header">
						<strong>	{{username}}</strong>
							<br/><br/>
								<strong>Adventure:
								</strong>
								{{newres.adventure.titre}}
							</div>
							<div class="card-body">
								<strong>
									Date Adventures:
								</strong>
								{{newres.date.format('d/m/Y')}}
								<p class="card-text">
								<br>
									<strong>Prix:
										{{newres.adventure.prix}}</p>
								</p>
								<p>
									<h5 class="card-title">
										<strong>
											Date Reservation:
										</strong>
										{{newres.date.format('d/m/Y')}}</h5>

								</p>
							</div>
							<div class="card-footer text-muted">
								<a  href="{{ path('home')}}" class="btn btn-primary">Home</a>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endif %}
